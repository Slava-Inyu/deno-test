{
  "imports": {
    "std/": "https://deno.land/std@0.136.0/",
    "@kameleoon/nodejs-sdk": "npm:@kameleoon/nodejs-sdk@2.3.0"
  },
  "compilerOptions": {
    "allowJs": false,
    "lib": ["deno.window"],
    "strict": true
  },
  "tasks": {
    "dev": " deno run --watch --allow-net --allow-read --allow-env --cached-only app.ts"
  },
  "nodeModulesDir": true,
  "lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
  }
}
